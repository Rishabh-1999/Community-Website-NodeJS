<% layout('layout/layout') %>

<% include partials/navbar.ejs %>

<% if(data.isActive == "true"){ %>
<% include partials/sidebar.ejs %>
<% } %>

<center>
  <div class="container" style="padding-top: 100px">
    <div class="col-sm-6 border border-5 border border border-dark">
      <br>
      <h1 class="display-4"><u>Change Password</u></h1>
      <% if (errors.length > 0) { %>
      <br>
      <div class="alert alert-danger text-center ml-5 mr-5">
        <%= errors %>
      </div>
      <% } %>
      <% if (success.length > 0) { %>
      <br>
      <div class="alert alert-success text-center ml-5 mr-5">
        <%= success %>
      </div>
      <% } %>
      <form action="/userTable/changePassword" method="POST" enctype="multipart/form-data">
        <div class="col-sm-12">
          <div class="form-group">
            <label class="h3">Old Password:</label>
            <input type="password" minlength="4" name="oldPassword" class="form-control form-control-lg" required><br />
          </div>
          <div class="form-group">
            <label class="h3">New Password:</label>
            <input type="password" minlength="4" name="newPassword" class="form-control form-control-lg" required><br />
          </div>
          <div class="form-group">
            <input id="submit" type="submit" value="Submit" class="btn btn-lg btn-success">
          </div>
        </div>
      </form>
    </div>
  </div>
</center>