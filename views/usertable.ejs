<% layout('layout/layout') %>

<link rel="stylesheet" type="text/css" href="http://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css">
<link rel="stylesheet" type="text/css" href="/css/userTable.css">

<script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>


<% include partials/navbar.ejs %>

<% if(data.isActive == "true"){ %>
<% include partials/sidebar.ejs %>
<% } %>

<div class="container" style="margin-top:90px;">

  <!-- Edit Modal -->
  <center>
    <div id="editModal" class="modal fade" role="dialog" style="z-index:9999;">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title">Edit Module</h3>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          <div class="modal-body">
            <div class="form-horizontal">
              <div class="form-group">
                <label class="control-label col-sm-2">Username :</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control form-control-lg" id="eusername" placeholder="Username"
                    readonly>
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-sm-2">Phone :</label>
                <div class="col-sm-10">
                  <input type="number" class="form-control form-control-lg" maxlength="10" id="ephone"
                    placeholder="Username">
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-sm-2">City :</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control form-control-lg" id="ecity" placeholder="ecity">
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-sm-2">Status :</label>
                <div class="col-sm-10">
                  <select class="form-control form-control-lg" id="estatus">
                    <option value="Pending">Pending</option>
                    <option value="Confirmed">Confirmed</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-sm-2">Role :</label>
                <div class="col-sm-10">
                  <select class="form-control form-control-lg" id="erole">
                    <option value="User">User</option>
                    <option value="CommunityManagers">Community Manager</option>
                    <option value="SuperAdmin">SuperAdmin</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <div class=" pull-left">
                  <button class="btn btn-lg btn-success ml-5" id="eupdate" data-dimiss="modal">Update</button>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-lg btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </center>

  <!--Mail Modal-->
  <center>
    <div class="modal fade in" id="mailModal" role="dialog" style="z-index: 9999;">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="mailheader">Send Mail</h4>
            <button type="button" class="close" data-dismiss="modal">x</button>
          </div>
          <div class="modal-body">
            <div class="form-horizontal">
              <!-- form -->
              <div class="form-group">
                <label class="control-label col-sm-2" for="email">To:</label>
                <div class="col-sm-10">
                  <input type="email" name="username" class="form-control form-control-lg" id="emailPop" readonly="">
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-sm-2">Subject:</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control form-control-lg" name="subject" id="subject"
                    placeholder="Title" value="(This mail is from Community)">
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-12">
                  <!--Body-->
                  <textarea type="text" class="form-control trumbowyg-textarea" cols="30" rows="20" name="body"
                    id="body" style="padding: 0;text-align: left;"></textarea>
                </div>
              </div>
              <div class="form-group pull-right">
                <button class="btn btn-success btn-lg pull-right" id="mailbutton" data-dismiss="modal">Send</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </center>

  <!-- AFTER MODEL-->
  <div class="form-control p-2" id="userlist-icon" style="float:left;">
    <h3>User list</h3>
  </div>
  <select class="form-control float-right ml-2 mr-2 form-control-lg" id="rolebtn" style="width:220px;">
    <option value="All">All</option>
    <option value="SuperAdmin">SuperAdmin</option>
    <option value="User">Users</option>
    <option value="CommunityManagers">Community Managers</option>
  </select>

  <select class="form-control float-right ml-2 mr-2 p-2 btn-lg form-control-lg" id="statusbtn" style="width:130px;">
    <option value="All">All</option>
    <option value="Pending">Pending</option>
    <option value="Confirmed">Confirmed</option>
  </select>

  <button id="refresh" class="btn btn-default ml-2 mr-2 float-right p-2 btn-lg"
    style="background-color:#2D312C;color:#eee;" onclick="initaliseTable()">
    <span><i class="glyphicon glyphicon-refresh"></i></span> Refresh
  </button>
  <br><br><br>
  <div class="table-responsive">
    <table id="usertable" class="table table-striped table-bordered mt-3">
      <thead>
        <th>Username/Email</th>
        <th>Phone</th>
        <th>City</th>
        <th>Status</th>
        <th>Role</th>
        <th>Actions</th>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>


<script type="text/javascript" src="script/usertable-js.js"></script>