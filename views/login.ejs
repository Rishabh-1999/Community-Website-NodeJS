<!DOCTYPE html>
<html>

<head>
    <title>CQ</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="script/jquery-3.2.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="css/style.css">
</head>

<body>
    <header class="top-bar">
        <p>cq</p>
    </header>

    <center>
        <div class="container" id="container">
            <div class="login-form" id="login-form">
                <p>Log Into Your Account</p>
                <center id="addInvalid">
                    <% if (errors.length > 0) { %>
                    <br>
                    <div class="alert alert-danger text-center" style="width:100%;margin-left:10px;margin-right:10px;">
                        <%= errors %>
                    </div>
                    <% } %>
                    <% if (success.length > 0) { %>
                    <br>
                    <div class="alert alert-success text-center" style="width:100%;margin-left:10px;margin-right:10px;">
                        <%= success %>
                    </div>
                    <% } %>
                </center>
                <form method="POST" action="/userTable/checkLogin">
                    <div class="form-group">
                        <input type="text" required="required" class="form-control" placeholder="Email" name="email"
                            id="email"><br />
                    </div>

                    <div class="form-group">
                        <input type="password" required="required" name="password" class="form-control"
                            placeholder="Password" name="password" id="password"><br />
                    </div>

                    <div class="form-group">
                        <button class="btn btn-success" id="submit">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </center>

    <footer class="footer">
        <center>
            <p>CQ Â© 2020</p>
        </center>
    </footer>
</body>

</html>