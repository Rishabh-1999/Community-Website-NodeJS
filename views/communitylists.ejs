<% layout('layout/layout') %>

<link rel="stylesheet" type="text/css" href="css/communitystyle.css">

<% include partials/navbar.ejs %>

<% if(data.isActive == "true"){ %>
<% include partials/sidebar.ejs %>
<% } %>

<div class="" style="margin:0;padding:0;margin-top: 70px;">

  <div class="col-lg-12 scoll-possible p-0">
    <div class="community-header-top p-3" style="height:50px;">
      <div class="col-sm-12">
        <a class="btn community-head-btn active" onclick="initaliseTable()">
          <i class="fa fa-users"></i>
        </a>
        <a class="btn community-head-btn ml-5" href="/communityalllists">
          <i class="fa fa-search"></i>
        </a>
      </div>
    </div>
    <div class="container-community">
      <div class="col-sm-12">
        <div class="mt-5">
          <div class="d-flex community-panel-heading">
            <div class="d-flex flex-fill justify-content-start">
              <h3 class="m-4">My Communities</h3>
            </div>
            <div class="d-flex flex-fill justify-content-end">
              <a href="/invitedbycommunity" class="btn btn-lg community-panel-btn m-4">Invited Community</a>
              <% if(data.role == "SuperAdmin" || data.role == "CommunityManagers"){ %>
              <a href="/addCommunity" class="btn btn-lg community-panel-btn m-4">Create</a>
              <% } %>
            </div>
          </div>
          <div class="mb-5">
            <div id="can-create-community">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="/script/communitylists-js.js"></script>