<div class="outer" style="padding-top: 100px;">
	<div class="adduser-container">
		<div class="alert alert-dismissible" style="border: 1px solid rgb(226, 229, 225);" id="alert-div-avilability">
        	<center>
            	<label id="avilability" style="color: rgb(139, 139, 139);"></label>
          	</center>
      	</div>
		<div class="adduser-head">
			<h1>Add User</h1>
		</div>

		<div class="adduser-input">
			<input type="text" id="adduser-name" placeholder="Name" name="name" required="required">
			<input type="text" id="adduser-email" placeholder="Email" name="email" required="required" onChange="checkDuplicate()">
			<input type="text" id="adduser-password" placeholder="User Password" name="password" required="required">
			<input type="number" id="adduser-phoneno" placeholder="Phone" name="phoneno" required="required">
			<input type="text" id="adduser-city" placeholder="City" name="city" required="required">

			<label>Role :</label><br>
			<select id="addUser-select">
				<optgroup label="Select User Role" >
			        <option value="User">User</option>
			        <option value="Commuity Builder">Community Builder</option>
			        <option value="SuperAdmin">SuperAdmin</option>
			     </optgroup>
			</select>
		</div>
		<div class="form-group">
		    <input type="submit" value="Add User" class="btn btn-success" id="btnaddUser">
		    <a value="Add User" class="btn btn-danger" href="/addUser">Cancel</a>
		</div>
	</div>
</div>

<script type="text/javascript" src="script/addUser.js"></script>
