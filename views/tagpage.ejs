<% layout('layout/layout') %>

<% include partials/navbar.ejs %>

<% if(data.isActive == "true"){ %>
<% include partials/sidebar.ejs %>
<% } %>

<center>
  <div class="container" style="margin-top: 100px;">
    <div class="col-sm-6 p-5" style="border: 5px solid rgba(0, 0, 0, 0.1);">
      <h2 class="card-header display-3 m-2" style="border-bottom: 1px solid #eee;"><u>Create Tag</u></h2>
      <div id="tag-div">
      </div>
      <div class="form-group p-2">
        <input class="form-control form-control-lg" type="text" name="tagName" placeholder="Add Tag Name" id="tagname">
      </div>
      <div class="form-group">
        <input class="btn btn-lg btn-primary" type="submit" value="Submit" id="tagSubmitBtn" onclick="checkDuplicate()"
          autocomplete="off">
      </div>
    </div>
    <a href="/taglists" id="tags" class="btn btn-warning btn-lg" style="margin-top:10px;">Tag
      Lists</a>
  </div>
</center>

<script type="text/javascript" src="/script/tagpage-js.js"></script>